        private bool IsAlreadyOpen(Type formType)
        {

            bool isOpen = false;



            foreach (Form f in Application.OpenForms)
            {

                if (f.GetType() == formType)
                {

                    f.BringToFront();

                    f.WindowState = FormWindowState.Normal;

                    isOpen = true;

                }

            }


            return isOpen;

        }

